<%= link_to 'CSV-Download', meals_overview_groups_path(format: :csv), class: 'btn btn-secondary float-end' %>

<h1>Mahlzeiten√ºbersicht</h1>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Kochgruppe</th>
      <% @meals.each do |meal| %>
      <th><%= meal %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.display_name %></td>
        <% @meals.each do |meal| %>
        <td><%= @servings.fetch([group.id, meal.id], nil) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
