
<%= simple_form_for(@box) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :datetime %>
    <%= f.input :box_type, collection: Box.box_types.keys.map { |key| [I18n.t("activerecord.enums.box.box_type.#{key}"), key] }, include_blank: false %>
    <%= f.input :status, collection: Box.statuses.keys.map { |key| [I18n.t("activerecord.enums.box.status.#{key}"), key] }, include_blank: false %>
  </div>

  <div class="field">
    <%= f.label :groups_info %>
    <%= f.rich_text_area :groups_info %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-success' %>
  </div>
<% end %>
