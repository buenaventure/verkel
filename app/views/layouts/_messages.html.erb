<%# Rails flash messages styled for Bootstrap 4.0 %>
<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) || msg.is_a?(Array) %>
    <div class="alert alert-dismissible alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>" role="alert">
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      <%= content_tag :div, :id => "flash_#{name}" do %>
        <% if msg.is_a?(String) %>
          <%= msg %>
        <% else %>
          <ul>
          <% msg.each do |m| %>
            <li><%= m %></li>
          <% end %>
          </ul>
        <% end %>
      <% end %>
    </div>
  <% end %>
<% end %>
