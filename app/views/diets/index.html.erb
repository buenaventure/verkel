<h1>Ernährungsweisen</h1>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Kategorie</th>
      <th>Fälle</th>
      <th>problematische Zutaten</th>
      <th>Rezepte mit "+"</th>
      <th>Rezepte mit "-"</th>
    </tr>
  </thead>

  <tbody>
    <% @diets.each do |diet| %>
      <tr>
        <td><%= link_to diet.name, diet %></td>
        <td><%= diet.category %></td>
        <td class="text-right"><%= diet.participants.count %></td>
        <td class="text-right"><%= diet.ingredients.count %></td>
        <td class="text-right"><%= diet.positive_recipes.count %></td>
        <td class="text-right"><%= diet.negative_recipes.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Neue Ernährungsweise', new_diet_path, class: 'btn btn-primary' %>
