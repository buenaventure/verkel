<%= simple_form_for(meal) do |f| %>
  <%= f.input :datetime %>
  <%= f.input :name %>
  <%= f.association :recipe, collection: Recipe.order(:name) %>
  <% if feature(:estimation) %><%= f.input :estimated_share %><% end %>
  <%= f.input :optional %>
  <%= f.input :bundle %>
  <%= f.button :submit, class: 'btn btn-success' %>
<% end %>
