<div class="btn-group float-end" role="group">
  <%= link_to 'Löschen', @supplier, data: { turbo_method: :delete, turbo_confirm: 'Bist du sicher?' }, class: 'btn btn-danger' %>
  <%= link_to 'Bearbeiten', edit_supplier_path(@supplier), class: 'btn btn-primary' %>
  <%= link_to 'Zurück', suppliers_path, class: 'btn btn-light' %>
</div>

<h1>
  <%= @supplier.name %>
</h1>

<dl>
  <dt><%= Supplier.human_attribute_name('delivery_time') %></dt>
  <dd><%= @supplier.delivery_time %> h</dd>
  <dt><%= Supplier.human_attribute_name('address') %></dt>
  <dd><%= simple_format @supplier.address %></dd>
  <dt><%= Supplier.human_attribute_name('email') %></dt>
  <dd><%= link_to_if @supplier.email.present?, @supplier.email, "mailto:#{@supplier.email}" %></dd>
  <dt><%= Supplier.human_attribute_name('phone') %></dt>
  <dd><%= link_to_if @supplier.phone.present?, @supplier.phone, "tel:#{@supplier.phone}" %></dd>
  
</dl>

<p>
  <strong>Notizen</strong>
  <%= @supplier.notes %>
</p>

<%= link_to 'Neuen Artikel anlegen', new_article_path(supplier_id: @supplier), class: 'btn btn-sm btn-primary float-end' %>
<%= render 'articles/table', articles: @supplier.articles, supplier: true %>

<%= render 'orders/table', orders: @supplier.orders %>
