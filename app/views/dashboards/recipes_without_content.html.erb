<%= turbo_frame_tag 'recipes_without_content' do %>
  <% if @recipes_without_content.any? %>
  <div class="card border-danger">
    <%= link_to recipes_without_content_dashboard_path, class: "card-header" do %>
      Rezepte ohne Inhalt
    <% end %>
    <div class="card-body">
      <p>Diese <%= @recipes_without_content.count %> Rezepte stehen im Menü, aber haben keinen Inhalt:</p>
      <ul>
        <% @recipes_without_content.take(5).each do |recipe| %>
        <li><%= link_to recipe, recipe %></li>
        <% end %>
        <%= content_tag('li', '…') if @recipes_without_content.count > 5 %>
      </ul>
      <%= link_to 'Rezepte', recipes_path, class: 'card-link btn btn-primary' %>
    </div>
  </div>
  <% end %>
<% end %>
